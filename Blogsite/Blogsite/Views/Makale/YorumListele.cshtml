@model IEnumerable<Blogsite.Models.Yorum>

@foreach (var i in Model)
{

    @Html.DisplayFor(modelItem => i.Kullanici.KullaniciAdi)
    <br />
    @Html.DisplayFor(modelItem => i.YorumIcerik)
    <br />
    @Html.DisplayFor(modelItem => i.Tarih)
    <br />
    if (i.Kullanici.KullaniciAdi == Session["username"].ToString())
    {

        @Html.ActionLink("Güncelle", "Edit", new { id = i.id })
        @Html.ActionLink("Delete", "YorumDelete", new { id = i.id })

    }
    else if (i.Makaleler.Kullanici.KullaniciAdi == Session["username"].ToString())
    {

       
        @Html.ActionLink("Delete", "YorumDelete", new { id = i.id })

    }
    <hr />
}

